<Window x:Class="PenDemo.WinDraw5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenDemo"
        mc:Ignorable="d"
        Title="WinDraw" Height="300" Width="300" Closing="Window_Closing">
    <Grid>
            <InkCanvas x:Name="ic"  />
       
       <StackPanel Orientation="Horizontal">
           <Button Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="btnClear">Clear</Button>
           <Button Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="btnReplay">Replay</Button>
        </StackPanel>
       
    </Grid>
</Window>
